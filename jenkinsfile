pipeline {
    agent any
    
    tools {
        jdk 'jdk25'
    }
    
    environment {
        DEPLOY_PATH = '/home/porest/porest-back'
        JAR_NAME = 'porest-0.0.1-SNAPSHOT.jar'
        CONFIG_PATH = '/home/porest/porest-back/config'
        IP_BLACKLIST_FILE = 'ip-blacklist.txt'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/lshdainty/porest-back.git'
            }
        }
        
        stage('Grant Execute Permission') {
            steps {
                sh 'chmod +x gradlew'
            }
        }
        
        stage('Build') {
            steps {
                sh './gradlew clean build -x test -Pprofile=prod'
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // 배포 디렉토리 생성
                    sh "sudo mkdir -p ${DEPLOY_PATH}"
                    sh "sudo mkdir -p ${CONFIG_PATH}"

                    // 기존 프로세스 종료
                    sh """
                        sudo pkill -f "java -jar.*${JAR_NAME}" || true
                        sleep 2
                    """

                    // JAR 파일 복사
                    sh """
                        sudo cp build/libs/*-SNAPSHOT.jar ${DEPLOY_PATH}/${JAR_NAME}
                        sudo chown porest:porest ${DEPLOY_PATH}/${JAR_NAME}
                    """

                    // IP 블랙리스트 파일이 존재하지 않으면 빈 파일 생성
                    sh """
                        if ! ls "${CONFIG_PATH}/${IP_BLACKLIST_FILE}" > /dev/null 2>&1; then
                            echo "File not found. Creating new one..."

                            # 임시 파일 생성 후 sudo로 이동
                            cat > /tmp/ip-blacklist.txt << 'EOF'
# IP Blacklist File (Auto-generated)
# Add one IP address or CIDR notation per line
EOF
                            sudo mv /tmp/ip-blacklist.txt "${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                            sudo chown porest:porest "${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                            sudo chmod 644 "${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                            echo "✅ Created empty IP blacklist file: ${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                        else
                            echo "✅ IP blacklist file already exists: ${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                        fi
                    """

                    // 애플리케이션 재시작 (IP 블랙리스트 파일 경로 환경변수 전달)
                    sh """
                        sudo -u porest bash -c 'cd ${DEPLOY_PATH} && nohup java -jar ${JAR_NAME} --spring.profiles.active=prod --spring.config.additional-location=file:${CONFIG_PATH}/application-secret.properties -DIP_BLACKLIST_FILE_PATH=${CONFIG_PATH}/${IP_BLACKLIST_FILE} > app.log 2>&1 &'
                        echo "Spring Boot application started as porest user with prod profile"
                        echo "IP Blacklist file: ${CONFIG_PATH}/${IP_BLACKLIST_FILE}"
                    """

                    // 프로세스 확인
                    sh "sleep 3 && pgrep -f 'java -jar' && echo '✅ Process running' || echo '⚠️ Warning: Process not found'"
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Spring Boot 배포 성공!'
        }
        failure {
            echo '❌ Spring Boot 배포 실패!'
        }
        cleanup {
            cleanWs()
        }
    }
}

